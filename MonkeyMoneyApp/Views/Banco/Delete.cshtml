@model ApiMonkeyMoney.Models.Banco

@{
    ViewBag.Title = "Deletar Banco";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

<h2 class="text-center mb-4">Deletar Banco</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post" action="/Banco/Delete/@Model.Id">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group">
                            <label asp-for="Nome" class="form-label">Nome do Banco</label>
                            <input asp-for="Nome" class="form-control" placeholder="Digite o nome do banco" readonly />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-danger btn-block mt-4">Deletar</button>

                        <div class="text-center mt-3">
                            <a href="/Banco" class="text-muted">Voltar para a lista de Bancos</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
