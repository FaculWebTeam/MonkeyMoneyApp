@model ApiMonkeyMoney.Models.Banco

@{
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml"; 
    ViewBag.Title = "Criar Banco";
}

<h3 class="text-center mb-4">Criar Banco</h3>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post" action="/Banco/Create">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="form-group">
                        <label asp-for="Nome" class="form-label">Nome do Banco</label>
                        <input asp-for="Nome" class="form-control" placeholder="Digite o nome do banco" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block mt-4">Criar Banco</button>

                    <div class="text-center mt-3">
                        <a href="/Banco/Index" class="text-muted">Voltar para a lista de Bancos</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
