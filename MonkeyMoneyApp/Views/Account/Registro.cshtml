@model Registro

@{
    ViewBag.Title = "Registro";
}

<h3 class="text-center mb-4">Registrar Usuário</h3>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="form-group">
                        <label asp-for="Email" class="form-label">E-mail</label>
                        <input asp-for="Email" class="form-control" placeholder="Digite seu e-mail" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Nome" class="form-label">Nome</label>
                        <input asp-for="Nome" class="form-control" placeholder="Digite seu nome completo" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Senha" class="form-label">Senha</label>
                        <input asp-for="Senha" class="form-control" type="password" placeholder="Crie uma senha" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SenhaConfirmacao" class="form-label">Confirmar Senha</label>
                        <input asp-for="SenhaConfirmacao" class="form-control" type="password" placeholder="Confirme sua senha" />
                        <span asp-validation-for="SenhaConfirmacao" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block mt-4">Registrar</button>

                    <div class="text-center mt-3">
                        <a href="/Account/Login" class="text-muted">Já tem uma conta? Faça login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
