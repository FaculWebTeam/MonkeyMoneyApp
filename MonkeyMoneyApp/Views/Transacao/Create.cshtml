@model ApiMonkeyMoney.Models.Transacao

@{
    ViewBag.Title = "Criar Transação";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

<h2 class="text-center mb-4">Criar Transação</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post" action="/Transacao/Create">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group">
                            <label asp-for="Titulo" class="form-label">Título</label>
                            <input asp-for="Titulo" class="form-control" placeholder="Digite o título" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Descricao" class="form-label">Descrição</label>
                            <textarea asp-for="Descricao" class="form-control" placeholder="Digite a descrição"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Tipo" class="form-label">Tipo</label>
                            <input asp-for="Tipo" class="form-control" placeholder="Digite o tipo" />
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Valor" class="form-label">Valor</label>
                            <input asp-for="Valor" class="form-control" placeholder="Digite o valor" />
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="BancoId" class="form-label">Banco</label>
                            <select asp-for="BancoId" class="form-control">
                                <option value="">Selecione um banco</option>
                                @foreach (var banco in ViewBag.Bancos)
                                {
                                    <option value="@banco.Id">@banco.Nome</option>
                                }
                            </select>
                            <span asp-validation-for="BancoId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Horario" class="form-label">Horário</label>
                            <input asp-for="Horario" type="datetime-local" class="form-control" />
                            <span asp-validation-for="Horario" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block mt-4">Salvar</button>

                        <div class="text-center mt-3">
                            <a href="/Transacao/Index" class="text-muted">Voltar para a lista de Transações</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
