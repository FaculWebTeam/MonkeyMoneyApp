<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MonkiMoney</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MonkeyMoneyApp.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #ffecb3, #e8f5e9); /* Cor do fundo da página */
            color: #333;
            line-height: 1.6;
        }

        header .navbar {
            background-color: transparent; /* Deixa a navbar transparente */
            color: transparent; /* Remove a cor do texto */
            border-bottom: 0; /* Remove a borda para eliminar a divisão */
            box-shadow: none; /* Remove sombra para continuidade */
        }

        header .navbar-brand {
            font-size: 1.5rem;
            color: transparent; /* Remove a cor do texto */
            font-weight: bold;
        }

        header .nav-link {
            color: transparent; /* Remove a cor do texto das opções de navegação */
            font-size: 1.1rem;
            margin-right: 15px;
            transition: color 0.3s ease;
        }

            header .nav-link:hover {
                color: transparent; /* Remove a cor ao passar o mouse */
            }

        .container {
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .navbar-toggler {
            border-color: transparent; /* Remove a borda do ícone do toggle */
        }

        .navbar-toggler-icon {
            background-color: transparent; /* Deixa o ícone do toggle invisível */
        }

        .logout-button {
            color: #000000; /* Cor do botão logout */
            font-weight: bold;
            padding: 10px;
            border-radius: 5px;
            text-align: center;
            display: block;
            width: 100%;
            border: none;
            background: none;
        }

            .logout-button:hover {
                background-color: #c8e6c9; /* Fundo verde ao passar o mouse */
                color: #2e7d32; /* Cor do texto ao passar o mouse */
            }

        .pb-3 {
            padding-bottom: 1rem !important;
        }

        .sidebar {
            width: 200px;
            background-color: #F4E88D;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            position: fixed;
            height: 100%;
            top: 0; /* Ajuste para sobrepor a navbar */
            left: 0;
            padding-top: 20px; /* Espaço reduzido para a navbar */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .sidebar .brand {
                text-align: center;
                font-size: 1.5rem;
                font-weight: bold;
                color: #2e7d32;
                padding: 5px 0; /* Espaço reduzido */
                background-color: #F4E88D; /* Fundo para destacar o nome do site */
                border-bottom: 1px solid #2e7d32; /* Borda inferior para destacar */
            }

            .sidebar ul {
                list-style-type: none;
                padding: 0;
                flex-grow: 1;
            }

                .sidebar ul li {
                    padding: 10px;
                    text-align: center;
                    transition: background-color 0.3s, color 0.3s;
                }

                    .sidebar ul li a {
                        color: #000000; /* Letra em preto */
                        text-decoration: none;
                        display: block;
                        font-weight: bold;
                        padding: 10px;
                        border-radius: 5px;
                    }

                        .sidebar ul li a:hover {
                            background-color: #c8e6c9; /* Fundo verde */
                            color: #2e7d32; /* Texto verde escuro */
                        }

        .main-content {
            margin-left: 220px;
            padding: 20px;
        }

        .sidebar .logo {
            text-align: center;
            margin-top: 80px; /* Ajusta a logo mais para baixo */
        }

            .sidebar .logo img {
                max-width: 70%;
                height: auto;
            }

        .logout-section {
            text-align: center;
            padding: 20px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">MonkiMoney</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link">@User.Identity.Name</a>
                        </li>
                        <li class="nav-item">
                            <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="nav-link btn btn-link logout-button">SAIR</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="sidebar">
        <div>
            <div class="brand">MonkiMoney</div>
            <ul>
                <li><a href="/Resumo/Index">Resumo</a></li>
                <li><a href="/Banco/Index">Lista de Bancos</a></li>
                <li><a href="/Banco/Create">Criar Banco</a></li>
                <li><a href="/Meta/Index">Lista de Metas</a></li>
                <li><a href="/Meta/Create">Criar Meta</a></li>
                <li><a href="/Transacao/Index">Lista de Transações</a></li>
                <li><a href="/Transacao/Create">Criar Transação</a></li>
            </ul>
        </div>
        <div>
            <div class="logo">
                <img src="~/images/logo.png" alt="Logo" />
            </div>
            <div class="logout-section">
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <button type="submit" class="logout-button">SAIR</button>
                </form>
            </div>
        </div>
    </div>
    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
